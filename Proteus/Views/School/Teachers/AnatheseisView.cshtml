@using Proteus.DAL;
@using Proteus.Models;

@{
    ViewBag.Title = "Μητρώο αναθέσεων";
    Layout = "~/Views/Shared/_SchoolLayout.cshtml";
}

<style>
    .k-grid {
        font-size: 10px;
    }
</style>


<div class="page-header" style="margin:5px 30px 5px 30px">
    <span style="margin:5px 30px 5px 30px;font-family:'Segoe UI';font-size:large;text-shadow:1px 1px #000000">
        <font style="color:#494949;float:left;font-family:'Segoe UI'">Μητρώο αναθέσεων</font>
    </span>
    <span style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px">@Html.ActionLink("Επιστροφή", "Index", "School", null, new { @class = "btn btn-warning", style = "font-size:14px" })</span>
    <span style="margin:5px 5px 5px 10px;float:right;font-family:'Segoe UI';font-size:14px">@Html.ActionLink("Εκτύπωση", "AnatheseisPrint", "School", null, new { @class = "btn btn-primary", style = "font-size:14px", target = "_blank" })</span>
    <button class="btn btn-info" style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px" onclick="Refresh()">Ανανέωση</button>
</div>

<div class="body-content" style="margin:10px 30px 5px 30px;font-size:small">
        @(Html.Kendo().Grid<QueryAnatheseisViewModel>()
        .Name("anatheseis")
        .Columns(columns =>
        {
            columns.Bound(c => c.ΟΝΟΜΑΤΕΠΩΝΥΜΟ).Width(30)
                .ClientFooterTemplate("Συνολικό πλήθος: #=count#")
                .ClientGroupFooterTemplate("Πλήθος: #=count#");
            columns.Bound(c => c.EIDIKOTITA_DESC).Width(30);
            columns.Bound(c => c.ΠΕΡΙΟΔΟΣ).Width(10);
            columns.Bound(c => c.EIDIKOTITA_TEXT).Width(40);
            columns.Bound(c => c.LESSON_DESC).Width(40);
            columns.Bound(c => c.ΩΡΕΣ_ΘΕΩΡΙΑ).Width(8).Groupable(false);
            columns.Bound(c => c.ΩΡΕΣ_ΕΡΓΑΣΤΗΡΙΟ).Width(8).Groupable(false);

        })
        .Groupable()
        .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(10))
        .Filterable()
        .HtmlAttributes(new { style = "font-size:11px" })
        .Sortable(sortable => sortable.AllowUnsort(true).SortMode(GridSortMode.MultipleColumn))
        .Scrollable(scr => scr.Height(460))
        .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(60)
            .ServerOperation(false)
            .Model(model =>
            {
                model.Id(p => p.ΕΑ_ΚΩΔ);
            })
            .Read(read => read.Action("AnatheseisView_Read", "School"))
            //.Group(groups => groups.Add(p => p.ΟΝΟΜΑΤΕΠΩΝΥΜΟ))
            .Aggregates(a =>
            {
                a.Add(p => p.ΟΝΟΜΑΤΕΠΩΝΥΜΟ).Count();
            })
            .Events(events => events.Error("error_handler"))
            )

        )  @* --- data grid ---*@
</div>


<script id="events" type="text/javascript">

    function RefreshGrid(e) {
        var grid = $("#anatheseis").data("kendoGrid");
        grid.dataSource.read();

    }

    function error_handler(e) {
        if (e.errors) {
            var message = "";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "<br/>";
                    });
                }
            });
            MessageBoxAlert(message, "Σφάλμα");
        }
    }

</script>





