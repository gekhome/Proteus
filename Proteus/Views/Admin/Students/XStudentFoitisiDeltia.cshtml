@using Proteus.DAL;
@using Proteus.Models;


@{
    ViewBag.Title = "Δελτία φοίτησης";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .k-grid {
        font-size: 11px;
    }
</style>

<div class="page-header" style="margin:5px 30px 5px 30px">
    <span style="margin:5px 30px 5px 30px;font-family:'Segoe UI';font-size:large;text-shadow:1px 1px #000000">
        <font style="color:#494949;float:left;font-family:'Segoe UI'">Δελτία φοίτησης σπουδαστών</font>
    </span>
    <span style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px">@Html.ActionLink("Επιστροφή", "Index", "Admin", null, new { @class = "btn btn-warning", style = "font-size:14px" })</span>
    <button class="btn btn-info" style="margin:5px 5px 5px 5px;float:right;font-family:'Segoe UI';font-size:14px" onclick="RefreshGrid()">Ανανέωση</button>
</div>

<div class="body-content" style="margin:10px 20px 5px 20px;background-color:dimgray;padding:4px 4px 4px 4px;min-height:40px">
    <label style="margin-left:5px;font-size:13px;font-weight:bold;color:white">Σχολική Μονάδα : </label>
    @(Html.Kendo().DropDownList()
        .Name("ddlschool")
        .DataTextField("SCHOOL_NAME")
        .DataValueField("SCHOOL_ID")
        .HtmlAttributes(new { style = "width:260px;font-size:13px;font-weight:bold" })
        .OptionLabel("Επιλογή ...")
        .AutoBind(true)
        .Enable(true)
        .DataSource(source => { source.Read(read => { read.Action("GetSchools", "Admin"); }); })
        .Events(e =>
        {
            e.Select("ddlselect");
        })
    )
</div>

<div class="body-content" style="margin:10px 30px 5px 30px">
    @(Html.Kendo().Grid<StudentInfoViewModel>()
        .Name("Master")
        .Columns(columns =>
        {
            columns.ForeignKey(f => f.ΙΕΚ, (IEnumerable<SYS_SCHOOLS>)ViewData["schools"], "SCHOOL_ID", "SCHOOL_NAME").Width(30);
            columns.Bound(c => c.ΑΜΚ).Width(10).Groupable(false);
            columns.Bound(c => c.ΟΝΟΜΑΤΕΠΩΝΥΜΟ).Width(40).Groupable(false);
            columns.Bound(c => c.ΑΦΜ).Width(12).Groupable(false);
            columns.Bound(c => c.EIDIKOTITA_TEXT).Width(70);
            columns.Bound(c => c.ΠΡΑΞΗ_ΕΞΟΔΟΥ).Width(20);
        })
        .Selectable()
        .Groupable()
        .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(10))
        .Filterable()
        .HtmlAttributes(new { style = "display: block;font-size:12px" })
        .Sortable(sortable => sortable.AllowUnsort(true).SortMode(GridSortMode.MultipleColumn))
        .Scrollable(scr => scr.Height(260))
        .DataSource(dataSource => dataSource
            .Ajax()
            .PageSize(80)
            .ServerOperation(true)
            .Model(model =>
            {
                model.Id(p => p.STUDENT_ID);
            })
            .Read(read => read.Action("ReadStudentInfo", "Admin").Data("data1"))
            )
        .Events(events => events.Change("change"))

    )  @* --- data grid ---*@
</div>

<div class="body-content" style="margin:5px 30px 5px 30px;font-size:14px;background-color:dimgray;padding:4px 4px 4px 4px;min-height:40px">
    <span style="margin-right:5px;float:right;font-family:'Segoe UI'">
        <input style="font-family:'Segoe UI';font-size:13px" type="button" onclick="viewFoitisiDeltio()" title="Προβολή δελτίου φοίτησης του επιλεγμένου σπουδαστή" value="Προβολή στοιχείων" class="btn btn-default" />
    </span>
    <span style="margin-right:5px;float:right;font-family:'Segoe UI'">
        <input style="font-family:'Segoe UI';font-size:13px" type="button" onclick="destroyFoitisiDeltio()" title="Διαγραφή στοιχείων δελτίου φοίτησης του επιλεγμένου σπουδαστή" value="Διαγραφή πίνακα" class="btn btn-default" />
    </span>
    <span style="margin-right:5px;float:right;font-family:'Segoe UI'">
        <input style="font-family:'Segoe UI';font-size:13px" type="button" onclick="updateFoitisiDeltio()" title="Ενημέρωση στοιχείων δελτίου φοίτησης του επιλεγμένου σπουδαστή" value="Ενημέρωση πίνακα" class="btn btn-default" />
    </span>
    <span style="margin-right:5px;margin-left:5px;float:right;font-family:'Segoe UI'">
        <input style="font-family:'Segoe UI';font-size:13px" type="button" onclick="createFoitisiDeltio()" title="Δημιουργία στοιχείων δελτίου φοίτησης του επιλεγμένου σπουδαστή" value="Δημιουργία πίνακα" class="btn btn-default" />
    </span>
    <div id="divLoading" style="margin:0px 0px 0px 0px;float:left;font-family:'Segoe UI';z-index: 30001;display:none">
        <p id="message-icon" style="margin-left:5px;font-size:13px;color:#ffffff">
            Διαδικασία σε εξέλιξη...<img id="ajax-icon" src="~/Images/other/progress4.gif" style="margin-left:5px;width:36px;height:36px">
        </p>
    </div>
</div>

<div class="body-content" style="margin:10px 30px 5px 30px">
    @(Html.Kendo().Grid<StudentFoitisiDeltioViewModel>()
        .Name("Child")
        .Editable(editable => editable.Mode(GridEditMode.InLine).CreateAt(GridInsertRowPosition.Top))
        .HtmlAttributes(new { style="font-size:13px" })
        .Navigatable()
        .Filterable()
        .Groupable()
        .Sortable(sortable => sortable.AllowUnsort(true).SortMode(GridSortMode.MultipleColumn))
        .Pageable(pageable => pageable
        .Refresh(true)
        .PageSizes(true)
        .ButtonCount(10))
        .Scrollable(scr => scr.Height(200))
        .Columns(columns =>
        {
            columns.ForeignKey(f => f.ΜΑΘΗΤΗΣ_ΚΩΔ, (IEnumerable<qrySTUDENT_GLOBAL_SELECTOR>)ViewData["students"], "STUDENT_ID", "ΟΝΟΜΑΤΕΠΩΝΥΜΟ").Width(40);
            columns.Bound(c => c.ΠΡΩΤΟΚΟΛΛΟ).Width(10).Groupable(false).Title("Α.Π.").Filterable(false);
            columns.Bound(c => c.ΗΜΕΡΟΜΗΝΙΑ).Width(20).Title("Ημ/νία");
            columns.Command(command => { command.Edit(); command.Destroy(); }).Width(36);
            columns.Template(
                @<text></text>)
            .ClientTemplate(
            "<a class=\"k-button k-button-icontext\" href='" + Url.Action("XStudentFDKPrint", "Admin") + "?recordId=#=ΑΔΚ_ΚΩΔ#' target = _blank><span class=\"k-icon k-justifyFull\"></span>Εκτύπωση</a>"
            ).Width(18);
        })
        .ToolBar(toolBar =>
        {
            toolBar.Create();
        })
        .DataSource(ds => ds
            .Ajax()
            .Batch(false)
            .PageSize(20)
            .ServerOperation(true)
            .Model(model =>
            {
                model.Id(p => p.ΑΔΚ_ΚΩΔ);
                model.Field(p => p.ΜΑΘΗΤΗΣ_ΚΩΔ).Editable(false);
            })
            .Read(read => read.Action("FoitisiDeltia_Read", "Admin").Data("data"))
            .Create(create => create.Action("FoitisiDeltia_Create", "Admin").Data("data"))
            .Update(update => update.Action("FoitisiDeltia_Update", "Admin").Data("data"))
            .Destroy(destroy => destroy.Action("FoitisiDeltia_Destroy", "Admin"))
            .Events(events => events.Error("error_handler"))
        )
        )
</div>

<script>

    function ddlselect(e) {
        var schoolID = 0;
        var dataItem = this.dataItem(e.item.index());
        if (dataItem) {
            schoolID = dataItem.SCHOOL_ID;
        }
        if (schoolID) {
            $("#Master").data("kendoGrid").dataSource.read({ schoolId: schoolID });
        }
        else {
            MessageBoxAlert("Πρέπει να επιλέξετε σχολείο για προβολή των στοιχείων ατομικών δελτίων.")
        }
    };

    function data1() {
        var schoolID = $("#ddlschool").data("kendoDropDownList").value();
        if (schoolID) {
            return { schoolId: schoolID };
        }
        else {
            return { schoolId: 0 };
        }
    }

    function change(e) {
        var dataItem = this.dataItem(this.select());
        var studentID = dataItem.STUDENT_ID;
        var schoolID = dataItem.ΙΕΚ;

        $("#Child").data("kendoGrid").dataSource.read({ studentId: studentID, schoolId: schoolID });
        $("#Child").css("display", "block");
    }

    function data() {
        var masterGrid = $("#Master").data("kendoGrid");
        var studentID = 0;
        var schoolID = 0;
        // get data item for selected row
        var dataItem = masterGrid.dataItem(masterGrid.select());
        if (dataItem) {
            studentID = dataItem.STUDENT_ID;
            schoolID = dataItem.ΙΕΚ;
        }
        return { studentId: studentID, schoolId: schoolID };
    }

    function RefreshGrid(e) {
        var grid = $("#Child").data("kendoGrid");
        grid.dataSource.read();

    }

    function error_handler(e) {
        if (e.errors) {
            var message = "";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "<br/>";
                    });
                }
            });
            MessageBoxAlert(message, "Σφάλμα");
            RefreshGrid(e);
        }
    }

</script>

<script type="text/javascript">

    function createFoitisiDeltio() {
        var masterGrid = $("#Master").data("kendoGrid");
        var dataItem = masterGrid.dataItem(masterGrid.select());
        if (dataItem) {
            $('#divLoading').show();
            var studentID = dataItem.STUDENT_ID;
            var schoolID = dataItem.ΙΕΚ;
            $.ajax({
                url: '@Url.Action("CreateFoitisiDeltio", "Admin")?studentId=' + studentID + '&schoolId=' + schoolID,
                type: 'POST',
                data: "",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#divLoading').hide();
                    if (data != "") MessageBoxAlert(data);
                    $("#Child").data("kendoGrid").dataSource.read({ studentId: studentID });
                },
                error: function () {
                    $('#divLoading').hide();
                    MessageBoxAlert("Προέκυψε σφάλμα ανάκτησης δεδομένων.");
                }
            });
        }
        else {
            MessageBoxAlert("Για να γίνει η δημιουργία του πίνακα δελτίου φοίτησης πρέπει πρώτα να επιλέξετε σπουδαστή.");
        }
    }

    function updateFoitisiDeltio() {
        var masterGrid = $("#Master").data("kendoGrid");
        var dataItem = masterGrid.dataItem(masterGrid.select());
        if (dataItem) {
            $('#divLoading').show();
            var studentID = dataItem.STUDENT_ID;
            var schoolID = dataItem.ΙΕΚ;
            $.ajax({
                url: '@Url.Action("UpdateFoitisiDeltio", "Admin")?studentId=' + studentID + '&schoolId=' + schoolID,
                type: 'POST',
                data: "",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#divLoading').hide();
                    if (data != "") MessageBoxAlert(data);
                    $("#Child").data("kendoGrid").dataSource.read({ studentId: studentID });
                },
                error: function () {
                    $('#divLoading').hide();
                    MessageBoxAlert("Προέκυψε σφάλμα ανάκτησης δεδομένων.");
                }
            });
        }
        else {
            MessageBoxAlert("Για να γίνει η ενημέρωση του πίνακα δελτίου φοίτησης πρέπει πρώτα να επιλέξετε σπουδαστή.");
        }
    }

    function destroyFoitisiDeltio() {
        var masterGrid = $("#Master").data("kendoGrid");
        var dataItem = masterGrid.dataItem(masterGrid.select());
        if (dataItem) {
            $('#divLoading').show();
            var studentID = dataItem.STUDENT_ID;
            $.ajax({
                url: '@Url.Action("DestroyFoitisiDeltio", "Admin")?studentId=' + studentID,
                type: 'POST',
                data: "",
                contentType: 'application/json; charset=utf-8',
                success: function (data) {
                    $('#divLoading').hide();
                    if (data != "") MessageBoxAlert(data);
                    $("#Child").data("kendoGrid").dataSource.read({ studentId: studentID });
                },
                error: function () {
                    $('#divLoading').hide();
                    MessageBoxAlert("Προέκυψε σφάλμα ανάκτησης δεδομένων.");
                }
            });
        }
        else {
            MessageBoxAlert("Για να γίνει η διαγραφή του πίνακα δελτίου φοίτησης πρέπει πρώτα να επιλέξετε σπουδαστή.");
        }
    }

    function viewFoitisiDeltio() {
        var masterGrid = $("#Master").data("kendoGrid");
        var dataItem = masterGrid.dataItem(masterGrid.select());
        if (dataItem) {
            var studentID = dataItem.STUDENT_ID;

            window.open('@Url.Action("XViewFoitisiDeltio", "Admin")?studentId=' + studentID);
        }
        else {
            MessageBoxAlert("Για να γίνει η προβολή του πίνακα στοιχείων δελτίου φοίτησης πρέπει να επιλέξετε σπουδαστή.");
        }
    }

</script>
